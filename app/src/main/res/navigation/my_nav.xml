<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.arditakrasniqi.mymobilelife.presentation.fragments.ListFragment"
        android:label="Image List "
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="com.arditakrasniqi.mymobilelife.presentation.fragments.ImageFragment"
        android:label="Image Details"
        tools:layout="@layout/fragment_image" >
        <argument
            android:name="image_data"
            app:argType="com.arditakrasniqi.mymobilelife.data.model.Image" />
    </fragment>
</navigation>